<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Veritabanı Sınavı</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="hero-section text-center mb-5">
                    <h1 class="display-4">Veritabanı Sınavı</h1>
                    <p class="lead">Sınava başlamak için lütfen bilgilerinizi giriniz.</p>
                </div>

                <div class="card">
                    <div class="card-body">
                        <form id="girisForm">
                            <div class="mb-3">
                                <label for="ad" class="form-label">Adınız</label>
                                <input type="text" class="form-control" id="ad" name="ad" required>
                            </div>
                            <div class="mb-3">
                                <label for="soyad" class="form-label">Soyadınız</label>
                                <input type="text" class="form-control" id="soyad" name="soyad" required>
                            </div>
                            <div class="mb-3">
                                <label for="okulno" class="form-label">Okul Numaranız</label>
                                <input type="text" class="form-control" id="okulno" name="okulno" required>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Sınava Başla</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('girisForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData.entries());

            try {
                const response = await fetch('/denemeler/veritabani/giris', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                const result = await response.json();
                if (result.success) {
                    window.location.href = '/denemeler/veritabani';
                }
            } catch (error) {
                console.error('Hata:', error);
                alert('Bir hata oluştu. Lütfen tekrar deneyin.');
            }
        });
    </script>
</body>
</html> 